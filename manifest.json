{
	"manifest_version": 3,
	"name": "Content Tracker",
	"version": "1.0",
	"permissions": ["tabs", "notifications", "storage", "scripting", "webNavigation"],
	"description": "Input the text to track, click 'Start Tracking', and youâ€™ll receive a notification when the content appears on the page.",
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html"
	},
	"web_accessible_resources": [
		{
			"resources": ["long-drop.wav"],
			"matches": ["http://*/*", "https://*/*"]
		}
	],
	"host_permissions": ["http://*/*", "https://*/*"]
}
